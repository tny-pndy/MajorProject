
  <%layout("/layouts/boilerplate")%>
  <div class="row">
    <div class="col-8 offset-2" >
    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div><lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
        <div class="valid-feedback">Looks Good</div>
      </div>
      
        <div><lable for="description" class="form-label">Description</lable>
          <textarea
          name="listing[description]"
          required
         
          class="form-control"
        ></textarea>
      </div>
        
        <div><lable for="image" class="form-label">Image</lable>
          <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          class="form-control";
          type="text"/>
          
      </div>
      <div class="row">
        <div class="mb-3 col-md-4" >
          <lable for="price" class="form-label">Price</lable>
          <input name="listing[price]" class="form-control" required placeholder="enter price"   />
          <div class="invalid-feedback">Please Enter Number</div>
        </div>
          <div  class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
          <input name="listing[country]"class="form-control" required  placeholder="enter country" type="text" />
          </div>
      </div>
      
       <div> 
        <lable for="location" class="form-label">Location</lable>
        <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
      /></div> 
      <br><br>
        
      <button class="btn btn-dark add-btn">Add</button><br><br>
      </form>
    </div>
    </div>
  

